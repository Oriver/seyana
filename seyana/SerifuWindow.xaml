<Window x:Class="seyana.SerifuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:seyana"
        mc:Ignorable="d"
        Title="serifuWindow" Height="154" Width="292"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid>
        <Image Source="fukidashi.png" RenderTransformOrigin="0.5, 0.5">
            <Image.RenderTransform>
                <ScaleTransform x:Name="invert"/>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="serifu"
                   Text=""
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="30,12,0,0"
                   FontSize="24"
                   />
    </Grid>
</Window>
